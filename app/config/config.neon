#
common:
	parameters:

	php:
		date.timezone: Europe/Prague
		# zlib.output_compression: yes

	extensions:
		events: Kdyby\Events\DI\EventsExtension
		annotations: Kdyby\Annotations\DI\AnnotationsExtension
		doctrine: Kdyby\Doctrine\DI\OrmExtension
		console: Kdyby\Console\DI\ConsoleExtension

	doctrine:
		defaultTableOptions:
			collate: utf8_czech_ci

	nette:
		application:
			errorPresenter: Error

		debugger:
			maxLength: 10000
			maxDepth: 5

		session:
			autoStart: smart
			expiration: 14 days
			savePath: %wwwDir%/../temp/sessions
			debugger: on

	services:
		routerFactory: RouterFactory
		router: @routerFactory::createRouter

		processVideoCommand:
			class: stekycz\vmw\models\ProcessVideoCommand
			tags: [kdyby.console.command]

		ffmpeg:
			class: FFMpeg\FFMpeg
			factory: FFMpeg\FFMpeg::create

		videoCutRangeConvertor:
			class: stekycz\vmw\models\VideoCutRangeConvertor(
				%appDir%/../www/files
			)

	factories:
		uploadForm:
			class: stekycz\vmw\forms\UploadForm(@doctrine.dao(stekycz\vmw\models\Video))
			implement: stekycz\vmw\forms\IUploadFormFactory

		commercialControl:
			class: stekycz\vmw\components\CommercialControl(%commercial%)
			implement: stekycz\vmw\components\ICommercialControlFactory
			parameters: [stekycz\vmw\models\Commercial commercial]


production < common:

development < common:
